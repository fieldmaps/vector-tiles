[
  {
    "id": "background",
    "type": "background",
    "paint": { "background-color": "{background-color}" }
  },
  {
    "id": "park",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "park",
    "filter": ["==", "$type", "Polygon"],
    "layout": { "visibility": "visible" },
    "paint": {
      "fill-color": "{park-color}",
      "fill-opacity": {
        "base": 1,
        "stops": [
          [4, 0],
          [12, 1]
        ]
      }
    }
  },
  {
    "id": "water",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "water",
    "filter": ["all", ["==", "$type", "Polygon"], ["!=", "brunnel", "tunnel"]],
    "layout": { "visibility": "visible" },
    "paint": { "fill-antialias": true, "fill-color": "{water-color}" }
  },
  {
    "id": "landcover_ice_shelf",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "landcover",
    "maxzoom": 8,
    "filter": [
      "all",
      ["==", "$type", "Polygon"],
      ["==", "subclass", "ice_shelf"]
    ],
    "layout": { "visibility": "visible" },
    "paint": { "fill-color": "{ice-color}", "fill-opacity": 0.7 }
  },
  {
    "id": "landcover_glacier",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "landcover",
    "maxzoom": 8,
    "filter": [
      "all",
      ["==", "$type", "Polygon"],
      ["==", "subclass", "glacier"]
    ],
    "layout": { "visibility": "visible" },
    "paint": {
      "fill-color": "{ice-color}",
      "fill-opacity": {
        "base": 1,
        "stops": [
          [0, 1],
          [8, 0.5]
        ]
      }
    }
  },
  {
    "id": "landuse_residential",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "landuse",
    "maxzoom": 16,
    "filter": [
      "all",
      ["==", "$type", "Polygon"],
      ["==", "class", "residential"]
    ],
    "layout": { "visibility": "visible" },
    "paint": {
      "fill-color": "{residential-color}",
      "fill-opacity": {
        "base": 0.6,
        "stops": [
          [4, 0],
          [9, 0.6]
        ]
      }
    }
  },
  {
    "id": "landcover_wood",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "landcover",
    "minzoom": 10,
    "filter": ["all", ["==", "$type", "Polygon"], ["==", "class", "wood"]],
    "layout": { "visibility": "visible" },
    "paint": {
      "fill-color": "{wood-color}",
      "fill-opacity": {
        "base": 1,
        "stops": [
          [8, 0],
          [12, 1]
        ]
      }
    }
  },
  {
    "id": "landuse_park",
    "type": "fill",
    "source": "openmaptiles",
    "source-layer": "landuse",
    "filter": ["all", ["==", "$type", "Polygon"], ["==", "class", "park"]],
    "layout": { "visibility": "visible" },
    "paint": { "fill-color": "{wood-color}" }
  },
  {
    "id": "waterway",
    "type": "line",
    "source": "openmaptiles",
    "source-layer": "waterway",
    "filter": ["==", "$type", "LineString"],
    "layout": { "visibility": "visible" },
    "paint": {
      "line-color": "{water-color}",
      "line-opacity": {
        "base": 1,
        "stops": [
          [0, 0],
          [12, 1]
        ]
      }
    }
  },
  {
    "id": "water_name",
    "type": "symbol",
    "source": "openmaptiles",
    "source-layer": "water_name",
    "filter": ["==", "$type", "LineString"],
    "layout": {
      "symbol-placement": "line",
      "symbol-spacing": 500,
      "text-field": "{name:latin}\n{name:nonlatin}",
      "text-font": ["Metropolis Medium Italic", "Noto Sans Italic"],
      "text-rotation-alignment": "map",
      "text-size": 12
    },
    "paint": {
      "text-color": "{water-text-color}",
      "text-halo-blur": "{water-halo-width}",
      "text-halo-color": "{water-halo-color}",
      "text-halo-width": "{water-halo-width}"
    }
  }
]
